<!-- navbar -->
<nav class="navbar navbar-light ">
    <div class="container-fluid">
        <a class="navbar-brand " href="#">
            <span class="title">Happy</span>
            <img src="../assets/images/justTree.jpg" alt="logo" width="200" height="200" class="align-middle">
            <span class="title">Trees</span>
        </a>
    </div>
</nav>

{{!-- main content --}}
<div class="row">
    <!-- our side bar saved list items. with the delete icons -->
    <div class="sidebar col-3">
        <h2 style="margin-left: 8%;">Saved Work</h2>
        <ul id="drawing-list" class="list-group">
            <!--list items will be created dynamically with jquery-->
            {{#each drawings}}
            <li class="list-group-item" data-id="{{this.dataValues.id}}" data-title="{{this.dataValues.title}}">
                <a href="#" class="alert-link">{{this.dataValues.title}}</a>
                <i class='fas fa-trash-alt float-right text-secondary delete-note' data-id="{{this.dataValues.id}}"></i>
            </li>
            {{/each}}
        </ul>
    </div>

    <!-- our canvas from paperjs  -->
    <div class="art col-6" id="main">
        <div class="canvas col">
            <canvas id="myCanvas" width="512" height="600"></canvas>
        </div>
    </div>

    <!-- our save and clear buttons for paperjs -->
    <div class="col-3 myButtons">
        <div>
            <button type="button" class="save btn btn-success" data-bs-toggle="modal"
                data-bs-target="#titleModal">Save</button>
            <button type="button" id="clearButton" class="clear btn btn-warning"> Clear</button>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="titleModal" tabindex="-1" aria-labelledby="titleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titleModalLabel">Drawing Title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input id='drawing-title' class='input-group' autocomplete='off' />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button id='saveButton' type="button" class="btn btn-primary" data-bs-dismiss="modal">Submit</button>
            </div>
        </div>
    </div>
</div>